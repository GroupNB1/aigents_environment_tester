{
    "name": "LangChain LangGraph Ollama Demo",
    "dockerFile": "../Dockerfile",
    "context": "..",
    "forwardPorts": [
        8000,
        8501,
        11434
    ],
    "portsAttributes": {
        "8000": {
            "label": "FastAPI Server",
            "onAutoForward": "notify"
        },
        "8501": {
            "label": "Streamlit App",
            "onAutoForward": "notify"
        },
        "11434": {
            "label": "Ollama Server",
            "onAutoForward": "notify"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "ms-python.pylint",
                "ms-python.black-formatter",
                "charliermarsh.ruff",
                "redhat.vscode-yaml"
            ],
            "settings": {
                "python.pythonPath": "/usr/local/bin/python",
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.formatting.provider": "black",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true
            }
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/git:1": {
            "version": "latest"
        }
    },
    "postCreateCommand": "bash .devcontainer/setup.sh",
    "runArgs": [
        "--gpus=all"
    ],
    "containerEnv": {
        "OLLAMA_HOST": "0.0.0.0:11434",
        "PYTHONPATH": "/workspaces/aigents_environment_tester"
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/aigents_environment_tester,type=bind,consistency=cached",
    "workspaceFolder": "/workspaces/aigents_environment_tester"
}